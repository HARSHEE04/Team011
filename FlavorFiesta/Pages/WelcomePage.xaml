<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlavorFiesta.Pages.WelcomePage"
             BackgroundColor="#FFF0CCCC"
             Title="Welcome to Flavor Fiesta">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="WELCOME TO"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="Black" />
        <Label Text="FLAVOR FIESTA"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="Black" />
        <Button Text="Sign-In"
                WidthRequest="200"
                HeightRequest="50"
                Margin="20"
                BackgroundColor="#FFFFC0CB"
                Command="{Binding SignInCommand}" />
        <Button Text="Sign-Up"
                WidthRequest="200"
                HeightRequest="50"
                Margin="20"
                BackgroundColor="#FFFFC0CB"
                Clicked="OnSignUpClicked" />
    </StackLayout>

</ContentPage>
