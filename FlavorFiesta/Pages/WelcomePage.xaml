<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlavorFiesta.Pages.WelcomePage"
             Title="Welcome to Flavor Fiesta">
             
    <Grid>
        
        <Image Source="background.png" Aspect="AspectFill" Opacity="1"/> 
        
        <ScrollView>
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
                <Frame BackgroundColor="#000000" Opacity="0.6" Padding="20" CornerRadius="20">
                    <StackLayout>
                        <Label Text="WELCOME TO"
                               FontSize="30"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="White"/>
                        
                        <Label Text="FLAVOR FIESTA"
                               FontSize="30"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="#FF69B4"/>
                    </StackLayout>
                </Frame>
                
                <!-- Button styles -->
                <Button Text="Sign-In"
                        WidthRequest="200"
                        HeightRequest="50"
                        Margin="20"
                        BackgroundColor="#FF69B4"
                        TextColor="White"
                        CornerRadius="10"
                        Command="{Binding SignInCommand}"
                        Clicked="OnSignInClicked"/>
                
                <Button Text="Sign-Up"
                        WidthRequest="200"
                        HeightRequest="50"
                        Margin="20"
                        BackgroundColor="#FF69B4"
                        TextColor="White"
                        CornerRadius="10"
                        Command="{Binding SignUpCommand}"
                        Clicked="OnSignUpClicked"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
