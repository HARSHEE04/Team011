<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlavorFiesta.Pages.NutritionalPreferencesPage"
             Title="Nutritional Preferences">
  <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">

            <!-- Calories Section -->
            <Label Text="Calories:" FontAttributes="Bold"/>
            <HorizontalStackLayout>
                <CheckBox/>
                <Label Text="100-300"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <CheckBox/>
                <Label Text="300-600"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <CheckBox/>
                <Label Text="600+"/>
            </HorizontalStackLayout>

            <!-- Protein Section -->
            <!-- Repeat the same pattern as above for Protein, Sugar, etc. -->

            <!-- Submit Button -->
            <Button Text="SUBMIT" Margin="5" Command="{Binding SubmitCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
