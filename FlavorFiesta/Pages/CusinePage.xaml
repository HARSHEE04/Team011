<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="FlavorFiesta.Pages.CuisinePage"
             Title="Cuisine Page">

    <Grid Padding="10"
          RowDefinitions="Auto, *, Auto"
          ColumnDefinitions="*, *, *">
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Text="Please select your preferred cuisine:"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               FontSize="Large"/>

        <!-- Radio Buttons for Cuisine Selection -->
        <RadioButton x:Name="ItalianRadioButton"
                     Content="Italian"
                     Grid.Row="1" Grid.Column="0"
                     CheckedChanged="OnCuisineTypeChanged"/>
        <RadioButton x:Name="ChineseRadioButton"
                     Content="Chinese"
                     Grid.Row="1" Grid.Column="1"
                     CheckedChanged="OnCuisineTypeChanged"/>
        <RadioButton x:Name="IndianRadioButton"
                     Content="Indian"
                     Grid.Row="1" Grid.Column="2"
                     CheckedChanged="OnCuisineTypeChanged"/>

        <!-- Submit Button -->
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                Text="Submit"
                HorizontalOptions="Center"
                Clicked="OnSubmitClicked"/>
    </Grid>
</ContentPage>
