<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlavorFiesta.Pages.NutritionalPreferencesSelectionPage"
             Title="Select Preferences">

    <StackLayout>
        <ListView x:Name="PreferencesListView"
                  SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding DietType}" Detail="{Binding CuisineType}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Create New Preferences"
                Clicked="OnCreateNewPreferencesClicked"/>
    </StackLayout>
</ContentPage>
